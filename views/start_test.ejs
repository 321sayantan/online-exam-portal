        }

        .btn{
            margin: auto;
            width: fit-content;
            margin-top: 8%;
        }
        .btn > a > button{
            padding: 15px 70px;
            font-size: large;
            cursor: pointer;
            border-radius: 10px;
            background-color: #94ff9c;
        }

